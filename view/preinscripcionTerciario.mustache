<main>
    <div class="Titulo">
        <h1><span>P</span>reinscripcion</h1>
    </div>
    <div class="contenedorForm">
        <h3>Completa tus datos</h3>
        {{#msg}}
            <div class="error">{{msg}}</div>
        {{/msg}}
        {{#user}}
        <form class="formUser" action="/inscripcion/procesarPreinscripcion" method="post">
            <input name="id" type="text" value="{{id_usuario}}" style="display: none">
            <label for="nombreCompleto">Nombre Completo</label>
            <input name="nombre" id="nombreCompleto" type="text" value="{{nombre}}">
            <label for="dni">Numero de Documento</label>
            <input name="dni" id="dni" type="text" value="{{dni}}">
            <label for="numero">Numero Telefonico</label>
            <input name="numero" id="numero" type="tel" value="{{numero}}">
            <label for="direccion">Direccion</label>
            <input name="direccion" id="direccion" type="text">
            <label for="edad">Edad</label>
            <input name="edad" id="edad" type="number" value="{{edad}}">
            <label for="email">Email</label>
            <input name="email" type="email" id="email" value="{{email}}">
            <label for="file">Analitico | Constancia</label>
            <input type="file">
            <button type="submit">Enviar</button>
        </form>
        {{/user}}
    </div>
</main>